<div class="mixtape-container">
  <div class="title-container">
    <h2 class="mixtape-title">let's make some awesome mixtapes!</h2>
  </div>
  <div class="playlist-player">
    <iframe src="https://embed.spotify.com/?uri=spotify:user:{{userId}}:playlist:{{playlistId}}&theme=white" width="300" height="380" frameborder="0" allowtransparency="true"></iframe>
  </div>
  <div>
{{#un-slider slides=mixtapePhotos animation='fade' nav=false autoplay=true speed=800 delay=3500 arrows=false as |slide|}}
  <div class="box photos"><img src={{slide}}></div>
  {{/un-slider}}
  </div>
</div>


{{!-- {{mixtape.sidebar-tools playlist=playlistId}} --}}

<ul class="menu">     
    <li title="background-color"><a href="#" class="background-color" onclick={{action "togglePaint"}}>paint background</a></li>
    <li title="font"><a href="#" class="font" onclick={{action "toggleText"}}>change the font</a></li>
    <li title="font-color"><a href="#" class="font-color" onclick={{action "toggleTextColor"}}>change the font color</a></li>
    <li title="message"><a href="#" class="message">write a message</a></li>
    <li title="images"><a href="#" class="images" {{action "selectImages" playlistId}}>upload images</a></li>
    <li title="stickers"><a href="#" class="stickers">add stickers</a></li>
  </ul>
    
  <div class="color-bar {{if paintIsOpen 'open'}}">
    {{mixtape.background-color playlist=playlist}}
  </div>

  <div class="text-bar {{if textIsOpen 'open'}}">
    {{mixtape.font-selector playlist=playlist}} 
  </div>

  <div class="text-color-bar {{if textColorIsOpen 'open'}}">
    {{mixtape.font-color playlist=playlist}} 
  </div>
