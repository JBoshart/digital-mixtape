
<ul class="menu">     
  <li title="background-color"><a href="#" class="background-color" onclick={{action "togglePaint"}}>paint background</a></li>
  <li title="font"><a href="#" class="font" onclick={{action "toggleText"}}>change the font</a></li>
  <li title="font-color"><a href="#" class="font-color" onclick={{action "toggleTextColor"}}>change the font color</a></li>
    <li title="message"><a href="#popup1" class="message" onclick={{action "toggleMessage"}}>write a message</a></li>
  <li title="images"><a href="#" class="images" {{action "selectImages" playlistId}}>upload images</a></li>
</ul>

<div class="mixtape-container">
  <div class="title-container">
    <h2 class="mixtape-title mixtape-text">{{title}}</h2>
  </div>
  <div class="playlist-player">
    <iframe src="https://embed.spotify.com/?uri=spotify:user:{{userId}}:playlist:{{playlistId}}&theme=white" width="300" height="380" frameborder="0" allowtransparency="true" class="spotify-player"></iframe>
  </div>
  <div>
    {{#un-slider slides=mixtapePhotos animation='fade' nav=false autoplay=true speed=800 delay=3500 arrows=false as |slide|}}
      <div class="box photos"><img src={{slide}}></div>
    {{/un-slider}}
  </div>

    
  <div class="color-bar {{if paintIsOpen 'open'}}">
    {{mixtape.background-color playlist=playlistId}}
  </div>

  <div class="text-bar {{if textIsOpen 'open'}}">
    {{mixtape.font-selector playlist=playlistId}} 
  </div>

  <div class="text-color-bar {{if textColorIsOpen 'open'}}">
    {{mixtape.font-color playlist=playlistId}} 
  </div>

  <div class="box">
    <div id="popup1" class="overlay">
      <div class="popup">
        <h2>Leave a special message!</h2>
        <a class="close" href="#" onclick={{action "closeMessage"}}>&times;</a>
        <div class="content">
          {{input type="textarea" value=message placeholder="leave some <3" maxlength="200"}}<br>
          <button onclick={{action "saveMessage" message}}>save message</button>
        </div>
      </div>
    </div>
  </div>

  <div id="personal-message" class="mixtape-text"></div>

  <div class="publish">Ready to share your mixtape?<button {{action "share" playlistId}}>publish it!</button></div>
</div>


